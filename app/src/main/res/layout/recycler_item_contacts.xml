<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardClass"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin= "10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            android:id="@+id/linearimg">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/recImageContacts"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
            <Button
                android:id="@+id/btn_update_contacts"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/Cambridge"
                android:padding="0dp"
                android:text="SỬA"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:cornerRadius="25dp" />
            <Button
                android:id="@+id/btn_update_delete"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/YInMn_Blue"
                android:padding="0dp"
                android:text="XÓA"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:cornerRadius="25dp" />
        </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/linearimg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tên liên hệ:"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tv_name_contacts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Tên liên hệ"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Số điện thoại:"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tv_phone_contacts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Số điện thoại"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email:"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tv_email_contacts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Email"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa chỉ:"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tv_locate_contacts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ"
                    android:layout_weight="2"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ngày sinh:"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
                <TextView
                    android:id="@+id/tv_birthday_contacts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh"
                    android:layout_weight="2"
                    android:textColor="@color/YInMn_Blue"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />
            </TableRow>
        </TableLayout>




    </RelativeLayout>
</androidx.cardview.widget.CardView>